<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
	<div class="header">
		<h1 class="header__h1 header__h1_50">
			TOP PLAYERS
    	</h1>
	</div>

	<div class="content">
		<table class="top-table">
			<fest:each iterate="json.players" index="i" value="player">
				<!-- Первые три подсвечиваются золотом -->
				<fest:script>
					i++;
					var tr_gold = 'top-tr_gold-hover';
				</fest:script>
		        <tr class="top-tr { i < 4 ? tr_gold : ''}">	
					<td>
						<fest:value>i</fest:value>
					</td>
					<td align="left">
						<fest:value>player.name</fest:value>
					</td>
					<td>
						<fest:value>player.score</fest:value>
					</td>
				</tr>
			</fest:each>
		</table>
	</div>

	<div class="footer">
		<h3>
			<a href="/#main" class="footer__a">
				<span class="glyphicon glyphicon-chevron-left"></span>
				MAIN MENU
			</a>
    	</h3>
	</div>
</fest:template>
